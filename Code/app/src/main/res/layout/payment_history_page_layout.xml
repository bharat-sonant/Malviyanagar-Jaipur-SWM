<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/complainFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ComplainPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Toolbar
            android:id="@+id/toolbarComplain"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/green">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/payment_history"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </Toolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/paymentHisRcy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/lny_bottom"
            android:layout_below="@+id/toolbarComplain"
            android:paddingBottom="5dp"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="1"
            tools:listitem="@layout/history_rcy_layout" />


        <LinearLayout
            android:id="@+id/lny_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="340"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/att_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="170"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="2dp"
                    android:paddingTop="5dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="5dp"
                    android:text="Total Amount"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/att_tamount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="170"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="end"
                    android:paddingLeft="2dp"
                    android:paddingTop="5dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="01dp"
                android:background="@color/black"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPayAmt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/lny_bottom"
                android:layout_margin="05dp"
                android:text="PAY Amount"
                app:cornerRadius="10dp"
                app:backgroundTint="@color/green"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>